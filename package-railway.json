    "express-rate-limit": "^7.1.5",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.2",
    "pdfkit": "^0.15.0",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6"
  },
  "optionalDependencies": {
    "canvas": "^3.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
