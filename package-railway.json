{
  "name": "sistema-inventario",
  "version": "1.0.0",
  "description": "Sistema web de inventário com leitura de QR codes e controle de estoque",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "init-db": "node src/database/init.js",
